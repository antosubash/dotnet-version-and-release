{
  "tasks": [
    {
      "name": "dotnet-format",
      "command": "dotnet",
      "group": "format",
      "args": ["dotnet-format", "--include", "${staged}"],
      "include": ["**/*.cs"]
    },
    {
      "name": "commit-message-linter",
      "command": "dotnet",
      "args": [
        "husky",
        "exec",
        ".husky/csx/commit-lint.csx",
        "--args",
        "${args}"
      ]
    }
  ]
}
